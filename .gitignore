# .gitignore at the root level

# Ignore node_modules in both server and client
/node_modules/

# Ignore build artifacts in the client
/client/build/

# Ignore environment files at the root
.env

# Ignore environment files in the client
/client/.env.local
/client/.env.development.local
/client/.env.test.local
/client/.env.production.local

# Ignore specific files in the client
/client/.DS_Store
/client/npm-debug.log*
/client/yarn-debug.log*
/client/yarn-error.log*

# Ignore specific files in the server
/server/npm-debug.log*
/server/yarn-debug.log*
/server/yarn-error.log*
/server/nodemodules/
